#!/bin/bash

<% if cloud == "cf" -%>
export CLOUDFILES_USERNAME=<%= dest_id %>
export CLOUDFILES_APIKEY=<%= dest_key %>
<% else -%>
export AWS_ACCESS_KEY_ID=<%= dest_id %>
export AWS_SECRET_ACCESS_KEY=<%= dest_key %>
<% end -%>

duplicity --no-encryption --remove-older-than 6M <% @directories.each do |dir| %>--include '<%= dir %>' <% end -%>--exclude '**' / <%= cloud %>+https://<%= bucket %>

exit 0
